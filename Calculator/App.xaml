<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Calculator"
             x:Class="Calculator.App">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary Source="Resources/Styles.xaml" />


            <Color x:Key="bgColor">#0000AD</Color>
            <Color x:Key="fgColor">#FFFFFF</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{DynamicResource bgColor}" />
                <Setter Property="BorderColor" Value="{DynamicResource fgColor}" />
                <Setter Property="TextColor" Value="{DynamicResource fgColor}" />
                <Setter Property="FontSize" Value="30" />
                <Setter Property="FontFamily" Value="bold" />
            </Style>

           
        </ResourceDictionary>

    </Application.Resources>
</Application>
